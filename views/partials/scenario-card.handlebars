<!-- Scenario Card Partial -->
<div class="scenario-card" data-scenario-id="" data-disposition="{{disposition}}">
    <div class="card-header">
        <h2>{{title}}</h2>
        <p class="card-subtitle">{{subtitle}}</p>
    </div>

    <div class="timeline-summary" style="padding: 10px; margin: 10px 0; background: #2a2a2a; border-left: 3px solid #66ccff; font-size: 14px; color: #dcdcdc;">
        <strong>Timeline:</strong> <span class="timeline-text">LTC insurance payout in 2028, Memory Care starts 2031, Passing in 2040</span>
    </div>

    <div class="ltc-trigger-control">
        <label>LTC Trigger Year</label>
        <div class="slider-container">
            <input type="range" min="2026" max="2036" value="2028" step="1"
                   class="ltc-slider" data-card="{{cardNumber}}">
            <span class="ltc-value">2028</span>
        </div>
    </div>

    <div class="memory-care-control">
        <label>Memory Care Start Year</label>
        <div class="slider-container">
            <input type="range" min="2026" max="2040" value="2031" step="1"
                   class="memory-care-slider" data-card="{{cardNumber}}">
            <span class="memory-care-value">2031</span>
        </div>
    </div>

    <div class="year-of-passing-control">
        <label>Year of Passing</label>
        <div class="slider-container">
            <input type="range" min="2026" max="2040" value="2040" step="1"
                   class="year-of-passing-slider" data-card="{{cardNumber}}">
            <span class="year-of-passing-value">2040</span>
        </div>
    </div>

    <div class="advanced-params-section">
        <label class="param-toggle-label">
            <input type="checkbox" class="param-toggle" data-card="{{cardNumber}}">
            ⚙️ Advanced Parameters
        </label>

        <div class="param-sliders" style="display:none;">
            <div class="param-row">
                <label>IRA Growth Rate</label>
                <div class="slider-container">
                    <input type="range" min="0" max="10" value="4.0" step="0.1"
                           class="param-slider" data-param="ira_growth" data-card="{{cardNumber}}">
                    <span class="param-value">4.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>ManagedIRA Starting Balance</label>
                <div class="slider-container">
                    <input type="range" min="100000" max="1000000" value="300000" step="5000"
                           class="param-slider" data-param="managed_ira_start" data-card="{{cardNumber}}">
                    <span class="param-value">$300,000</span>
                </div>
            </div>
            <div class="param-row">
                <label title="A's personal budget (rental income is additional, earmarked for condo expenses)">Personal Gross Expenses (Pre-Facility)</label>
                <div class="slider-container">
                    <input type="range" min="50000" max="150000" value="95000" step="1000"
                           class="param-slider" data-param="lifestyle" data-card="{{cardNumber}}">
                    <span class="param-value">$95,000/yr</span>
                </div>
            </div>
            <div class="param-row">
                <label>Primary House Appreciation</label>
                <div class="slider-container">
                    <input type="range" min="0" max="15" value="6.0" step="0.1"
                           class="param-slider" data-param="primary_appreciation" data-card="{{cardNumber}}">
                    <span class="param-value">6.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>Condo Appreciation</label>
                <div class="slider-container">
                    <input type="range" min="0" max="15" value="5.0" step="0.1"
                           class="param-slider" data-param="condo_appreciation" data-card="{{cardNumber}}">
                    <span class="param-value">5.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>Memory Care Inflation</label>
                <div class="slider-container">
                    <input type="range" min="3" max="10" value="5.0" step="0.5"
                           class="param-slider" data-param="memory_care_inflation" data-card="{{cardNumber}}">
                    <span class="param-value">5.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>Management Fee</label>
                <div class="slider-container">
                    <input type="range" min="6" max="10" value="8.0" step="0.5"
                           class="param-slider" data-param="management_fee" data-card="{{cardNumber}}">
                    <span class="param-value">8.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>Monthly Rental Income</label>
                <div class="slider-container">
                    <input type="range" min="2000" max="3500" value="2350" step="50"
                           class="param-slider" data-param="rental_income" data-card="{{cardNumber}}">
                    <span class="param-value">$2,350/mo</span>
                </div>
            </div>
            <div class="param-row">
                <label>Mortgage Rate (Primary House)</label>
                <div class="slider-container">
                    <input type="range" min="4.0" max="10.0" value="6.0" step="0.1"
                           class="param-slider" data-param="mortgage_rate" data-card="{{cardNumber}}">
                    <span class="param-value">6.0%</span>
                </div>
            </div>
            <div class="param-row">
                <label>HELOC Interest Rate</label>
                <div class="slider-container">
                    <input type="range" min="4.0" max="10.0" value="7.5" step="0.1"
                           class="param-slider" data-param="heloc_rate" data-card="{{cardNumber}}">
                    <span class="param-value">7.5%</span>
                </div>
            </div>
            <div class="param-row">
                <label>Medical Base Monthly</label>
                <div class="slider-container">
                    <input type="range" min="100" max="500" value="200" step="10"
                           class="param-slider" data-param="medical_base_monthly" data-card="{{cardNumber}}">
                    <span class="param-value">$200/mo</span>
                </div>
            </div>
            <div class="param-row">
                <label>Memory Care (pre-inflation)</label>
                <div class="slider-container">
                    <input type="range" min="80000" max="200000" value="120000" step="5000"
                           class="param-slider" data-param="memory_care_cost" data-card="{{cardNumber}}">
                    <span class="param-value">$120,000/yr</span>
                </div>
            </div>
        </div>
    </div>

    <div class="metrics">
        <h3>Financial Metrics (2026-2040)</h3>
        <div class="metric-row">
            <span class="metric-label" title="All liquid assets at start (SDIRA + ManagedIRA + LTC Savings)">Liquid Assets Start:</span>
            <span class="metric-value liquid-assets-start">$643,000</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Minimum liquid assets during projection">Liquid Assets Min:</span>
            <span class="metric-value liquid-assets-min">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Liquid assets at end of 2040">Liquid Assets Final:</span>
            <span class="metric-value liquid-assets-final">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Combined SDIRA + ManagedIRA balance at start">IRA Start:</span>
            <span class="metric-value ira-start">$368,000</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Minimum combined IRA balance during projection">IRA Min:</span>
            <span class="metric-value ira-min">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Combined IRA balance in 2040">IRA Final:</span>
            <span class="metric-value ira-final">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Total LTC payouts from trigger year onward">LTC Disbursed:</span>
            <span class="metric-value ltc-total">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Final value of all real estate in 2040">Real Estate Final:</span>
            <span class="metric-value real-estate-final">—</span>
        </div>
        <div class="metric-row">
            <span class="metric-label" title="Year and total amount of real estate liquidation needed">Real Estate Liquidated:</span>
            <span class="metric-value real-estate-liquidated">—</span>
        </div>
    </div>

    <div class="card-footer">
        <a href="#" class="btn-details">View Details →</a>
    </div>
</div>
