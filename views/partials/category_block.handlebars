<section class="spell-list-category" id="cat-{{this.categoryId}}">
    <details>
        <summary class="category-tooltip" 
                 data-name="{{this.categoryName}}" 
                 data-description="{{this.categoryDescription}}">
            <strong>{{this.categoryName}}</strong>
            <span class="count-tag">{{this.spells.length}}</span>
        </summary>
        
        {{#if this.categoryDescription}}
            <p class="category-description"><i>{{this.categoryDescription}}</i></p>
        {{/if}}

        <div class="category-content">
            {{#each this.spells}}
                {{> spell_entry this}}
            {{/each}}
        </div>
    </details>
</section>