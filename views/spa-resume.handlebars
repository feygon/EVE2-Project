        }

        /* Skip link for keyboard navigation */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #31521B;
            color: #fff;
            padding: 8px 16px;
            z-index: 100;
            text-decoration: none;
            font-weight: 600;
            border-radius: 0 0 4px 0;
        }

        .skip-link:focus {
            top: 0;
            outline: 3px solid #99CB38;
            outline-offset: 2px;
        }

        .resume {
            max-width: 900px;
            margin: 0 auto;
            padding: 50px 60px;
            background: #fff;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            border-radius: 12px;
            position: relative;
        }

        .resume::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #31521B, #99CB38);
            border-radius: 12px 12px 0 0;
        }

        .resume-header {
            text-align: center;
            padding-bottom: 30px;
            margin-bottom: 35px;
            border-bottom: 2px solid #ddd;
        }

        .resume-header h1 {
            margin: 0 0 12px 0;
            color: #1a1a1a;
            font-size: 2.5em;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .resume-subtitle {
            font-size: 1.15em;
            color: #2d4a17; /* Darkened for contrast - 7.5:1 ratio */
            font-weight: 500;
            margin: 8px 0;
        }

        .resume-contact {
            font-size: 1em;
            color: #555; /* Improved contrast - 7.46:1 */
            margin-top: 15px;
        }

        /* Hide decorative separators from screen readers */
        .resume-contact .separator {
            color: #888;
        }

        .resume-contact .separator[aria-hidden="true"] {
            user-select: none;
        }

        .resume-contact a {
            color: #1e3a10; /* Darkened for 10:1+ contrast */
            text-decoration: underline; /* Always visible, not just on hover */
            text-decoration-color: #99CB38;
            text-underline-offset: 3px;
            font-weight: 500;
            transition: color 0.2s ease, text-decoration-color 0.2s ease;
        }

        .resume-contact a:hover {
            color: #2d4a17;
            text-decoration-color: #2d4a17;
        }

        /* Visible focus states for keyboard navigation */
        a:focus,
        button:focus {
            outline: 3px solid #667eea;
            outline-offset: 2px;
            border-radius: 2px;
        }

        .resume-section {
            margin-bottom: 35px;
        }

