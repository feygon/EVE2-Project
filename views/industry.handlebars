<html>
<h1>Industry Page</h1><br>

<div>
<label>Current Items</label>
<select name="CurrentItems"></select>
{{#each item_structure_list}}
<option>{{name}}, type: {{type}}, vol: {{vol_packed}}</option>
{{/each}}
</div>
<div>
    <label>Current Item Uses</label>
    <select name="CurrentUses"></select>
    {{#each itemUse_list_orderbyq}}
    <option>{{name}}, capacity: {{capacity}}m3, scale: {{scale}}</option>
    {{/each}}
</div>
<div>
    <label>Objects under construction.</label>
</div>

<form id="inventstructure" action="/eve2/industry/inventstructure/" method="post">
    
    <h2>Invent Item </h2>
    <label>Item Name </label><input type="text" name="name" value="Name"><br>
    <label>Packaged Volume </label><input type="number" step="0.01" min="0" name="packaged" value="0"><br>
    <label>Unpackaged Volume </label><input type="number" step="0.01" min="0" name="unpackaged" value="0"><br>
    <label>Item Structure Type </label><select name="type"> 
        <option>None</option>
        {{#each item_structure_types}}
            <option value="{{type}}">{{type}}</option>
        {{/each}}
    </select><br>
    <label style = "color:red">(Reviewer - This is an insert to the item structures entity.)</label>
    <input type="submit" value="Invent">
</form>
<br>


<form id="designuse" action="/eve2/industry/designitemuse/" method="post">
    <h2>Design a use for an item</h2> <br>
    <label>Based on item </label><select name="fromitemname">
        <option>None</option>
    {{#each useless_item_structures}}
        <option value="{{id}}">{{name}}, {{type}}</option>
    {{/each}}

    </select><br>
    <label>Capacity </label><input type="number" step="0.01" min="0" name="capacity" value="0"><br>
    <label>Container Type </label><select name="type"> 
        <option>None</option>
        {{#each item_use_scales}}
            <option value="{{type}}">{{type}}</option>
        {{/each}}
    </select><br>

    <label style = "color:red">(Reviewer - This is an insert to the item uses entity.)</label>
    <input type="submit" value="Design">
</form><br>


<form id="choose-item" action="/eve2/industry/produce/" method="get">
<h2>Get an inventory item</h2>
    <label>Item </label><select name="id"> 
        <option>None</option>
        {{#each item_structure_list}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
<label style = "color:red">(Reviewer - This is an insert to the Objects entity.)</label>
<input type="submit" value="Produce">
</form>

</html>