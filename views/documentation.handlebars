<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RealFeygon.com - Documentation</title>
    <style>
        /* Dyslexia-friendly typography */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', 'Arial', sans-serif;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            color: #dcdcdc;
            line-height: 1.8;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: #232323;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            overflow: hidden;
        }

        header {
            background: linear-gradient(135deg, #66ccff 0%, #4488cc 100%);
            padding: 40px;
            text-align: center;
            color: #000;
        }

        header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: 700;
        }

        header p {
            font-size: 1.2em;
            opacity: 0.9;
        }

        .search-box {
            padding: 30px;
            background: #2a2a2a;
            border-bottom: 2px solid #444;
        }

        .search-box input {
            width: 100%;
            padding: 15px 20px;
            font-size: 1.1em;
            border: 2px solid #66ccff;
            border-radius: 8px;
            background: #1a1a1a;
            color: #dcdcdc;
            font-family: inherit;
        }

        .search-box input:focus {
            outline: none;
            border-color: #82b1ff;
            box-shadow: 0 0 0 3px rgba(102, 204, 255, 0.2);
        }

        .content {
            padding: 40px;
        }

        .quick-start {
            background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
            color: #000;
            padding: 30px;
            border-radius: 8px;
            margin-bottom: 40px;
        }

        .quick-start h2 {
            font-size: 1.8em;
            margin-bottom: 15px;
        }

        .quick-start-links {
            display: flex;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .quick-start-links a {
            background: rgba(0, 0, 0, 0.3);
            color: #fff;
            padding: 15px 30px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            flex: 1;
            min-width: 200px;
            text-align: center;
        }

        .quick-start-links a:hover {
            background: rgba(0, 0, 0, 0.5);
            transform: translateY(-2px);
        }

        .doc-section {
            margin-bottom: 50px;
        }

        .doc-section h2 {
            font-size: 2em;
            color: #66ccff;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 3px solid #66ccff;
        }

        .doc-section .section-emoji {
            font-size: 1.3em;
            margin-right: 10px;
        }

        .doc-section p {
            color: #aaa;
            margin-bottom: 20px;
            font-size: 1.1em;
        }

        .doc-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        /* Compact row layout for categories with many files */
        .doc-grid.compact {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .doc-card {
            background: #2a2a2a;
            border: 2px solid #444;
            border-radius: 8px;
            padding: 25px;
            transition: all 0.3s;
            cursor: pointer;
        }

        .doc-card:hover {
            border-color: #66ccff;
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(102, 204, 255, 0.3);
        }

        /* Compact card styling for row layout */
        .doc-grid.compact .doc-card {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            transform: none;
        }

        .doc-grid.compact .doc-card:hover {
            transform: translateX(5px);
            box-shadow: 0 2px 10px rgba(102, 204, 255, 0.3);
        }

        .doc-card h3 {
            color: #66ccff;
            font-size: 1.3em;
            margin-bottom: 10px;
        }

        .doc-grid.compact .doc-card h3 {
            margin: 0;
            font-size: 1.1em;
            min-width: 250px;
        }

        .doc-card .doc-description {
            color: #ccc;
            margin-bottom: 15px;
            line-height: 1.6;
        }

        .doc-grid.compact .doc-card .doc-description {
            margin: 0;
            flex: 1;
            font-size: 0.95em;
        }

        .doc-card .doc-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #444;
        }

        .doc-grid.compact .doc-card .doc-meta {
            margin: 0 0 0 20px;
            padding: 0;
            border: none;
            flex-shrink: 0;
        }

        footer {
            background: #1a1a1a;
            padding: 30px;
            text-align: center;
            color: #888;
            border-top: 2px solid #444;
        }

        footer a {
            color: #66ccff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* Accessibility: High contrast mode support */
        @media (prefers-contrast: high) {
            body {
                background: #000;
            }
            .container {
                background: #111;
                border: 2px solid #fff;
            }
        }

        /* Responsive design */
        @media (max-width: 768px) {
            header h1 {
                font-size: 2em;
            }
            .doc-grid {
                grid-template-columns: 1fr;
            }
            .quick-start-links {
                flex-direction: column;
            }
        }

        /* Search highlighting */
        .hidden {
            display: none !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>?? RealFeygon.com Documentation</h1>
            <p>Complete guide to setup, deployment, and development</p>
        </header>

        <div class="search-box">
            <input type="text" id="searchInput" placeholder="?? Search documentation... (e.g., 'deployment', 'database', 'troubleshooting')" aria-label="Search documentation">
        </div>

        <div class="content">
            <!-- Quick Start Section -->
            <div class="quick-start">
                <h2>? Quick Start</h2>
                <p><strong>New to this project?</strong> Start with these essential documents:</p>
                <div class="quick-start-links">
                    <a href="/README.md">?? README - Project Overview</a>
                    <a href="/docs/QUICK_START.md">?? Quick Start Guide</a>
                </div>
            </div>

            <!-- Dynamic Documentation Sections -->
            {{#each categories}}
                {{#with (lookup ../docStructure this)}}
                <div class="doc-section" data-category="{{@key}}">
                    <h2><span class="section-emoji">{{{emoji}}}</span>{{title}}</h2>
                    <p><strong>Path:</strong> {{path}}{{#if isCompact}} <em>({{files.length}} files - compact view)</em>{{/if}}</p>
                    
                    <div class="doc-grid{{#if isCompact}} compact{{/if}}">
                        {{#each files}}
                        <div class="doc-card" onclick="window.location='/docs/{{path}}'">
                            <h3>{{title}}</h3>
                            <p class="doc-description">{{description}}</p>
                            <div class="doc-meta">
                                <span class="doc-badge {{badge}}">{{#unless ../isCompact}}{{../title}}{{/unless}}</span>
                                <a href="/docs/{{path}}" class="doc-link">Read ?</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            {{/each}}
        </div>

        <footer>
            <p><strong>Documentation Stats:</strong> {{totalDocs}} documents dynamically discovered</p>
            <p>Last Updated: {{lastUpdated}} | Maintained by Feygon Nickerson</p>
            <p><a href="https://github.com/feygon/EVE2-Project">View on GitHub</a></p>
        </footer>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            var query = this.value.toLowerCase();
            var sections = document.querySelectorAll('.doc-section');
            var cards = document.querySelectorAll('.doc-card');

            if (query) {
                // Hide all sections initially
                sections.forEach(function(section) {
                    section.classList.add('hidden');
                });
                
                // Show matching cards and their parent sections
                var visibleSections = new Set();
                cards.forEach(function(card) {
                    if (card.innerText.toLowerCase().includes(query)) {
                        card.classList.remove('hidden');
                        var section = card.closest('.doc-section');
                        visibleSections.add(section);
                    } else {
                        card.classList.add('hidden');
                    }
                });
                
                // Show sections that have visible cards
                visibleSections.forEach(function(section) {
                    section.classList.remove('hidden');
                });
            } else {
                // Show everything if search is empty
                sections.forEach(function(section) {
                    section.classList.remove('hidden');
                });
                cards.forEach(function(card) {
                    card.classList.remove('hidden');
                });
            }
        });

        // Keyboard shortcut: Ctrl+K to focus search
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('searchInput').focus();
            }
        });
    </script>
</body>
</html>
